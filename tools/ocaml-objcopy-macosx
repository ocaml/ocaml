TMP="${TMPDIR=/tmp}"
TEMP="${TMP}"/ocaml-objcopy-$$.o
UNDEF="${TMP}"/ocaml-objcopy-$$.sym

usage () {
  echo "usage: objcopy {--redefine-sym <old>=<new>} file.o" >&2
  exit 2
}

: > "$UNDEF"

while : ; do
  case $# in
    0) break;;
    *) case $1 in
         --redefine-sym)
           case $2 in
             *=*) ALIAS="$ALIAS -i${2#*=}:${2%%=*}"
                  echo ${2%%=*} >>"$UNDEF"
                  ;;
             *) usage;;
           esac
           shift 2
           ;;
         -*) usage;;
         *) case $FILE in
              "") FILE=$1; shift;;
              *) usage;;
            esac;;
       esac;;
  esac
done

ld -o "$TEMP" -r $ALIAS "$FILE"
ld -o "$FILE" -r -unexported_symbols_list "$UNDEF" "$TEMP"

rm -f "$TEMP" "$UNDEF"

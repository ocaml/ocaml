(function "quicksort" (lo: int hi: int a: val)
  (if (< lo hi)
      (let (i lo
            j hi
            pivot (addraref a hi))
        (while (< i j)
          (catch
              (while 1
                (if (>= i hi) (exit l1) [])
                (if (> (addraref a i) pivot) (exit l1) [])
                (assign i (+ i 1)))
           with (l1) [])
          (catch
              (while 1
                (if (<= j lo) (exit l2) [])
                (if (< (addraref a j) pivot) (exit l2) [])
                (assign j (- j 1)))
           with (l2) [])
          (if (< i j)
              (let temp (addraref a i)
                   (addraset a i (addraref a j))
                   (addraset a j temp))
            []))
        (let temp (addraref a i)
             (addraset a i (addraref a hi))
             (addraset a hi temp))
        (app "quicksort" lo (- i 1) a unit)
        (app "quicksort" (+ i 1) hi a unit))
    []))
